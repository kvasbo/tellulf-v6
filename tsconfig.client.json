{
  "compilerOptions": {
    "outDir": "./assets/js",
    "lib": ["ES2018", "DOM"],
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "es5",
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": ["ts/client/*"]
}
