{
    "compilerOptions": {
        "outDir": "./assets/js",
        "lib": ["DOM"],
        "module": "umd",
        "target": "ES2022",
        "allowJs": false,
        "esModuleInterop": true,
        "strict": false,
        "removeComments": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "sourceRoot": "./ts/client"
    },
    "include": ["ts/client/*"]
}
