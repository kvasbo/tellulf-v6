{
  "compilerOptions": {
    "outDir": "./build",
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "Node16",
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "node16",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "sourceRoot": "./ts"
  },
  "include": [
    "ts/*.ts", "ts/*.js"]
}