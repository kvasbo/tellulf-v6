{
  "compilerOptions": {
    "outDir": "./build",
    "lib": [
      "es2020",
      "dom"
    ],
    "module": "CommonJS",
    "target": "es2020",
    "allowJs": true,
    "moduleResolution": "node",
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "inlineSourceMap": true,
    "sourceRoot": "./ts"
  },
  "include": [
    "ts/*.ts"
  ]
}