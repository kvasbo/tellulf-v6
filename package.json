{
    "scripts": {
        "sass-watch": "npx sass --watch sass:assets/css",
        "sass": "npx sass sass:assets/css",
        "tsc-watch-server": "npx tsc --watch --project tsconfig.server.json",
        "tsc-watch-client": "npx tsc --watch --project tsconfig.client.json",
        "node-run": "npx nodemon build/Server.js",
        "dev": "docker compose --file docker-compose-dev.yml up --build",
        "push": "docker build . && docker tag kvasbo/tellulf:latest kvasbo/tellulf:latest && docker push kvasbo/tellulf:latest",
        "build": "npx tsc --project tsconfig.server.json && npx tsc --project tsconfig.client.json && npx sass sass:assets/css",
        "run-server": "node build/Server.js",
        "lint": "npx eslint ./ts/server/"
    },
    "devDependencies": {
        "@types/express": "^4.17.7",
        "@types/jquery": "^3.5",
        "@types/luxon": "^3.2.0",
        "@types/node": "^18.15.10",
        "@types/twig": "^1.12.9",
        "@typescript-eslint/eslint-plugin": "^5.57.0",
        "@typescript-eslint/parser": "^5.57.0",
        "eslint": "^8.37.0",
        "nodemon": "^2.0.22",
        "prettier": "^2.8.7",
        "sass": "^1.60",
        "typescript": "^5.0.3"
    },
    "dependencies": {
        "axios": "^1.3.4",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "googleapis": "^114.0.0",
        "graphql": "16",
        "graphql-request": "^5.2.0",
        "luxon": "^3.3.0",
        "sunrise-sunset-js": "^2.2.1",
        "twig": "^1.16.0"
    },
    "name": "tellulf-v6",
    "version": "1.0.0",
    "description": "A private info screen",
    "main": "build/Server.js",
    "repository": "https://github.com/kvasbo/tellulf-v6.git",
    "author": "Audun Kvasb√∏ <audun@kvasbo.no>",
    "license": "MIT",
    "private": true,
    "nodemonConfig": {
        "ignore": [
            "data"
        ]
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "eslintConfig": {
        "ignorePatterns": [
            "ts/client/*.ts"
        ],
        "extends": [
            "plugin:@typescript-eslint/recommended",
            "plugin:@typescript-eslint/recommended-requiring-type-checking"
        ],
        "parserOptions": {
            "ecmaVersion": 2022,
            "project": [
                "tsconfig.server.json"
            ],
            "sourceType": "module"
        },
        "env": {
            "node": true,
            "es6": true,
            "es2022": true
        },
        "rules": {
            "no-console": 0,
            "no-unused-vars": 1
        }
    }
}
