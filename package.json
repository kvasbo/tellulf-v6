{
    "scripts": {
        "sass": "npx sass --embed-source-map  --watch sass:assets/css",
        "watch-server": "npx tsc --watch --p tsconfig.server.json",
        "watch-client": "npx tsc --watch --p tsconfig.client.json",
        "run": "npx nodemon build/Server.js",
        "build": "yarn run lint && npx tsc --p tsconfig.server.json && npx tsc --p tsconfig.client.json && npx sass sass:assets/css",
        "lint": "npx eslint ./ts/server/ --fix"
    },
    "devDependencies": {
        "@types/express": "*",
        "@types/jquery": "*",
        "@types/luxon": "*",
        "@types/node": "*",
        "@types/twig": "*",
        "@typescript-eslint/eslint-plugin": "^6",
        "@typescript-eslint/parser": "^6",
        "eslint": "^8.45",
        "eslint-config-prettier": "^9",
        "eslint-plugin-prettier": "^5",
        "nodemon": "^3.0",
        "prettier": "^3",
        "sass": "^1.62",
        "typescript": "^5.1"
    },
    "dependencies": {
        "axios": "^1.4",
        "dotenv": "^16.0",
        "express": "^4.18",
        "googleapis": "^126",
        "graphql": "^16.7.1",
        "graphql-request": "^6.0",
        "jquery": "^3",
        "luxon": "^3.3",
        "mqtt": "^5.0",
        "sunrise-sunset-js": "^2.2",
        "twig": "^1.16",
        "zod": "^3.21"
    },
    "name": "tellulf-v6",
    "version": "1.0.0",
    "description": "A private info screen",
    "main": "build/Server.js",
    "repository": "https://github.com/kvasbo/tellulf-v6.git",
    "author": "Audun Kvasb√∏ <audun@kvasbo.no>",
    "license": "MIT",
    "private": true,
    "nodemonConfig": {
        "ignore": [
            "data"
        ]
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "eslintConfig": {
        "plugins": [
            "@typescript-eslint",
            "prettier"
        ],
        "ignorePatterns": [
            "ts/client/*.ts"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2022,
            "project": [
                "tsconfig.server.json"
            ],
            "sourceType": "module"
        },
        "env": {
            "node": true,
            "es6": true,
            "es2022": true
        },
        "rules": {
            "no-console": 0,
            "no-unused-vars": 1,
            "no-undef": 1,
            "prettier/prettier": 2
        }
    }
}
