{
    "compilerOptions": {
        "outDir": "./build",
        "lib": ["es2020", "dom"],
        "module": "CommonJS",
        "target": "es2020",
        "allowJs": false,
        "moduleResolution": "node",
        "removeComments": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "sourceRoot": "./ts/server"
    },
    "include": ["ts/server/*"]
}
