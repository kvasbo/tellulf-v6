{
  "compilerOptions": {
    "outDir": "./build",
    "lib": ["es2022"],
    "module": "commonjs",
    "target": "es2022",
    "allowJs": false,
    "moduleResolution": "node",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
  },
  "include": ["ts/server/*"]
}
